<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:preview="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.eventCreation.CreateEventQRcode">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/QRcodeView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_18dp"
            android:src="@drawable/placeholder"

           />

        <Button
            android:id="@+id/generateQRcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_below="@id/QRcodeView"
            android:layout_centerHorizontal="true"
            android:text="@string/generate" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/generateQRcode"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/downloadQR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/downloadQR" />

            <Button
                android:id="@+id/sendEmailQR"
                style="@style/Widget.AppCompat.Button.Colored.MyButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5dp"
                android:text="@string/Send_QR" />

            <Button
                android:id="@+id/submitQR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sendEmailQR"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_40dp"
                android:text="@string/submitInfo" />
        </LinearLayout>


    </RelativeLayout>
</FrameLayout>