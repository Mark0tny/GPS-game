<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.eventCreation.CreateEventQRcode">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/QRcodeView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_18dp"
            tools:src="@tools:sample/avatars" />

        <EditText
            android:id="@+id/QRcode_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/QRcodeView"
            android:layout_centerHorizontal="true"
            android:hint="@string/QRmessage" />

        <Button
            android:id="@+id/generateQRcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/QRcode_message"
            android:layout_centerHorizontal="true"
            android:text="@string/generate" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/generateQRcode"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/downloadQR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/downloadQR" />

            <Button
                android:id="@+id/sendEmailQR"
                style="@style/Widget.AppCompat.Button.Colored.MyButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5dp"
                android:text="@string/Send_QR" />
        </LinearLayout>

        <Button
            android:id="@+id/submitQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:text="@string/submitInfo" />
    </RelativeLayout>
</FrameLayout>